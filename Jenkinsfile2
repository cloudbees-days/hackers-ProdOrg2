pipeline {
    agent {
        kubernetes {
            yaml '''
                apiVersion: v1
                kind: Pod
                spec:
                  containers:
                  - name: node
                    image: node:lts-alpine
                    command:
                    - sleep
                    args:
                    - 99d
            '''
        }
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code'
            }
        }

        stage('Install Dependencies') {
            steps {
                container('node') {
                    sh 'npm ci'
                }
            }
        }

        stage('Build') {
            steps {
                container('node') {
                    sh 'npm run build'
                }
            }
        }

        stage('Test') {
            steps {
                container('node') {
                    sh 'npm run test:unit -- --reporters=default --reporters=jest-junit'
                }
            }
            post {
                always {
                    junit '**/junit.xml'
                }
            }
        }

        stage('Register Build Artifact') {
            steps {
                registerBuildArtifactMetadata(
                    name: "hackers-organized",
                    url: "${BUILD_URL}artifact/dist/",
                    version: "${BUILD_NUMBER}",
                    digest: "${GIT_COMMIT}",
                    label: "demo"
                )
            }
        }
    }
}
